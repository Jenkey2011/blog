body
  background #f8fafc

figure
  max-height: 500px
  overflow-x: auto
  overflow-y: auto

#nav-bg
  position: absolute
  left: 0
  top: 0
  width: 100%
  height: 100%
  background-repeat no-repeat
  background-attachment: fixed
  background-position: center 
  background-size: cover ;
  opacity 0.8
#bg-img
  width 100%
  height auto
  position absolute
  left 0
  top 0
  
#site-info
  position relative

.recent-post-item
  padding: 24px 32px 32px;
  box-shadow: 0 4px 8px 0 rgba(7,17,27,.05)
  border-radius: 8px
  transition: all .3s
  .content
    margin-bottom 10px
  .article-title
    position relative
    hr
      position absolute
      left 0
      bottom -2px
      margin 0
      opacity 0
    &:hover
      border-bottom: 1px solid #fff!important;
      hr
        opacity 1
        &:before
          left: calc(95% - 20px)
  &:hover
    box-shadow: 0 8px 16px 0 rgba(7,17,27,.1);
     
    